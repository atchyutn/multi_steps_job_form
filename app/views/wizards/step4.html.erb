<ol class="breadcrumb">
  <li><%= link_to "Step 1", step1_wizard_path %></li>
  <li><%= link_to "Step 2", step2_wizard_path %></li>
  <li><%= link_to "Step 3", step3_wizard_path %></li>
  <li class="active" id="step4">Step 4</li>
</ol>

<%= simple_form_for @user_wizard, as: :user_wizard, url: validate_step_wizard_path do |f| %>
  <%= f.error_notification %>

  <%= hidden_field_tag :current_step, 'step4' %>
  <%= f.input :phone_number %>

  <div class="pull-right">
    <%= button_tag(type: 'submit', class: "btn btn-success") do %>
      <span><i class="glyphicon glyphicon-send"></i>Submit Application</span>
    <%end%>  
  </div>
<% end %>
