<div class='container'>
  <ol class="breadcrumb">
    <li class='active' id='step1'>Step 1</li>
    <li>Step 2</li>
    <li>Step 3</li>
    <li>Step 4</li>
  </ol>
</div>

<div class='col-md-12 form-group'>
<h2>Basic Details</h2>
  <%= simple_form_for @user_wizard, as: :user_wizard, url: validate_step_wizard_path do |f| %>
    <%= f.error_notification %>
      <%= hidden_field_tag :current_step, 'step1' %>
      <%= f.input :email, class: 'form-control' %>
      <%= f.submit 'Continue', class: 'btn btn-primary pull-right' %>
    </div>
  <% end %>
</div>
